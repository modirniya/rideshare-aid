<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/layout_container"
            android:gravity="center" android:padding="40dp">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tvResult" android:text="@string/not_enough_data" android:gravity="center"
                  android:fontFamily="@font/semibold"
                  android:textColor="@color/black" android:layout_marginBottom="16dp"/>
        <ImageView android:layout_width="150dp" android:layout_height="150dp"
                   android:src="@drawable/ic_vus"
                   android:id="@+id/imgResult" android:contentDescription="result" android:layout_marginBottom="25dp"/>


    </LinearLayout>
</FrameLayout>